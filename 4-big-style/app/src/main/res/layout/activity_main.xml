<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Notification"
        android:id="@+id/button1"
        android:onClick="showSimpleNotification" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Notification with Action"
        android:id="@+id/button2"
        android:onClick="showSimpleNotificationWithAction" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Notification with Wear Actions"
        android:id="@+id/button3"
        android:onClick="showSimpleNotificationWithWearAction" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Notification with Voice Actions"
        android:id="@+id/button4"
        android:onClick="showSimpleNotificationWithVoiceAction" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Big Style Notification"
        android:id="@+id/button5"
        android:onClick="showBigStyleNotification" />
</LinearLayout>